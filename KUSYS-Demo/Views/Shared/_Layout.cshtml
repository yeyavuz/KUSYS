<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KUSYS_Demo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <style>
        .nav-link:hover{
            color:red;
        }
    </style>
</head>
<body style=" background:#f8f9fd;">
    <header>
        <nav style="background:#fff;padding-left:20px;padding-right:20px;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a style="font-size: 1.5rem;font-weight: 600;text-transform: uppercase;color:#4f6df5!important;text-decoration:none;" asp-area="" asp-controller="Students" asp-action="Index">KUSYS Demo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="display:flex;flex-direction:column;align-items:end;justify-content:center;">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link casd" style="font-weight:500;color:#808080;transition:0.5s;" asp-area="" asp-controller="Students" asp-action="Index">Öğrenci Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link casd" style="font-weight:500;color:#808080;transition:0.5s;" asp-area="" asp-controller="Students" asp-action="CourseList">Öğrenci-Kurs Listesi</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="position:absolute;bottom:0;left:0;right:0;text-align:center;" class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - KUSYS_Demo 
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
